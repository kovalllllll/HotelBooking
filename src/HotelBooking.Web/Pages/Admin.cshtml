@page
@model HotelBooking.Web.Pages.AdminModel
@{
    ViewData["Title"] = "Адмін панель";
}

<div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="flex items-center gap-4 mb-8">
        <div class="w-14 h-14 gradient-bg rounded-2xl flex items-center justify-center shadow-lg">
            <span class="text-3xl">📊</span>
        </div>
        <div>
            <h1 class="text-3xl font-bold text-gray-800">Адмін панель</h1>
            <p class="text-gray-500">Керування бронюваннями та статистика</p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="glass-effect rounded-2xl shadow-lg p-6 border border-gray-100 card-hover">
            <div class="flex items-center gap-4">
                <div class="w-14 h-14 bg-gradient-to-br from-blue-400 to-blue-600 rounded-xl flex items-center justify-center shadow-lg">
                    <span class="text-2xl">📋</span>
                </div>
                <div>
                    <p class="text-sm text-gray-400 font-medium">Всього бронювань</p>
                    <p class="text-3xl font-bold text-gray-800">@Model.Statistics.TotalBookings</p>
                </div>
            </div>
            <div class="mt-4 pt-4 border-t border-gray-100">
                <span class="text-xs text-gray-400">За весь час</span>
            </div>
        </div>
        <div class="glass-effect rounded-2xl shadow-lg p-6 border border-emerald-100 bg-emerald-50/30 card-hover">
            <div class="flex items-center gap-4">
                <div class="w-14 h-14 bg-gradient-to-br from-emerald-400 to-emerald-600 rounded-xl flex items-center justify-center shadow-lg">
                    <span class="text-2xl">✅</span>
                </div>
                <div>
                    <p class="text-sm text-gray-400 font-medium">Підтверджених</p>
                    <p class="text-3xl font-bold text-emerald-600">@Model.Statistics.ConfirmedBookings</p>
                </div>
            </div>
            <div class="mt-4 pt-4 border-t border-emerald-100">
                <span class="text-xs text-emerald-500">Активні бронювання</span>
            </div>
        </div>
        <div class="glass-effect rounded-2xl shadow-lg p-6 border border-red-100 bg-red-50/30 card-hover">
            <div class="flex items-center gap-4">
                <div class="w-14 h-14 bg-gradient-to-br from-red-400 to-red-600 rounded-xl flex items-center justify-center shadow-lg">
                    <span class="text-2xl">❌</span>
                </div>
                <div>
                    <p class="text-sm text-gray-400 font-medium">Скасованих</p>
                    <p class="text-3xl font-bold text-red-600">@Model.Statistics.CancelledBookings</p>
                </div>
            </div>
            <div class="mt-4 pt-4 border-t border-red-100">
                <span class="text-xs text-red-400">Скасовані бронювання</span>
            </div>
        </div>
        <div class="glass-effect rounded-2xl shadow-lg p-6 border border-purple-100 bg-purple-50/30 card-hover">
            <div class="flex items-center gap-4">
                <div class="w-14 h-14 gradient-bg rounded-xl flex items-center justify-center shadow-lg">
                    <span class="text-2xl">💰</span>
                </div>
                <div>
                    <p class="text-sm text-gray-400 font-medium">Загальний дохід</p>
                    <p class="text-3xl font-bold gradient-text">@Model.Statistics.TotalRevenue.ToString("N0") ₴</p>
                </div>
            </div>
            <div class="mt-4 pt-4 border-t border-purple-100">
                <span class="text-xs text-purple-400">Сумарний дохід</span>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
        <!-- Monthly Chart -->
        <div class="glass-effect rounded-2xl shadow-lg p-6 border border-gray-100">
            <div class="flex items-center gap-3 mb-6">
                <div class="w-10 h-10 bg-blue-100 rounded-xl flex items-center justify-center">
                    <span class="text-xl">📈</span>
                </div>
                <h2 class="text-xl font-bold text-gray-800">Бронювання по місяцях</h2>
            </div>
            <canvas id="monthlyChart" height="200"></canvas>
        </div>

        <!-- Hotels Chart -->
        <div class="glass-effect rounded-2xl shadow-lg p-6 border border-gray-100">
            <div class="flex items-center gap-3 mb-6">
                <div class="w-10 h-10 bg-purple-100 rounded-xl flex items-center justify-center">
                    <span class="text-xl">🏨</span>
                </div>
                <h2 class="text-xl font-bold text-gray-800">Дохід по готелях</h2>
            </div>
            <canvas id="hotelsChart" height="200"></canvas>
        </div>
    </div>

    <!-- All Bookings Table -->
    <div class="glass-effect rounded-2xl shadow-lg overflow-hidden border border-gray-100">
        <div class="p-6 border-b border-gray-100 flex items-center gap-3">
            <div class="w-10 h-10 gradient-bg rounded-xl flex items-center justify-center">
                <span class="text-xl">📋</span>
            </div>
            <h2 class="text-xl font-bold text-gray-800">Всі бронювання</h2>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50/80">
                <tr>
                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">ID</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">Готель</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">Номер</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">Дати</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">Сума</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">Статус</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">Дії</th>
                </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                @foreach (var booking in Model.Bookings)
                {
                    var statusColor = booking.Status switch
                    {
                        HotelBooking.Domain.Enums.BookingStatus.Pending => "bg-amber-50 text-amber-700 border border-amber-200",
                        HotelBooking.Domain.Enums.BookingStatus.Confirmed => "bg-emerald-50 text-emerald-700 border border-emerald-200",
                        HotelBooking.Domain.Enums.BookingStatus.CheckedIn => "bg-blue-50 text-blue-700 border border-blue-200",
                        HotelBooking.Domain.Enums.BookingStatus.CheckedOut => "bg-gray-50 text-gray-600 border border-gray-200",
                        HotelBooking.Domain.Enums.BookingStatus.Cancelled => "bg-red-50 text-red-700 border border-red-200",
                        _ => "bg-gray-50 text-gray-600 border border-gray-200"
                    };
                    var statusIcon = booking.Status switch
                    {
                        HotelBooking.Domain.Enums.BookingStatus.Pending => "⏳",
                        HotelBooking.Domain.Enums.BookingStatus.Confirmed => "✅",
                        HotelBooking.Domain.Enums.BookingStatus.CheckedIn => "🔑",
                        HotelBooking.Domain.Enums.BookingStatus.CheckedOut => "🚪",
                        HotelBooking.Domain.Enums.BookingStatus.Cancelled => "❌",
                        _ => "📋"
                    };
                    <tr class="hover:bg-gray-50/50 transition-colors">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="text-sm font-bold text-gray-800">#@booking.Id</span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="text-sm font-medium text-gray-700">@booking.HotelName</span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="inline-flex items-center px-2.5 py-1 rounded-lg bg-gray-100 text-sm font-medium text-gray-600">
                                🚪 @booking.RoomNumber
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <span class="font-medium">@booking.CheckInDate.ToString("dd.MM")</span> — <span class="font-medium">@booking.CheckOutDate.ToString("dd.MM.yyyy")</span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="text-sm font-bold gradient-text">@booking.TotalPrice.ToString("N0") ₴</span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="inline-flex items-center gap-1 px-3 py-1.5 text-xs font-medium rounded-full @statusColor">
                                @statusIcon @booking.StatusName
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center gap-2">
                                @if (booking.Status == HotelBooking.Domain.Enums.BookingStatus.Pending)
                                {
                                    <form method="post" asp-page-handler="Confirm">
                                        <input type="hidden" name="bookingId" value="@booking.Id"/>
                                        <button type="submit" class="inline-flex items-center gap-1 px-3 py-1.5 bg-emerald-50 hover:bg-emerald-100 text-emerald-600 rounded-lg text-sm font-medium transition-colors border border-emerald-200">
                                            ✓ Підтвердити
                                        </button>
                                    </form>
                                }
                                @if (booking.Status != HotelBooking.Domain.Enums.BookingStatus.Cancelled &&
                                     booking.Status != HotelBooking.Domain.Enums.BookingStatus.CheckedOut)
                                {
                                    <form method="post" asp-page-handler="Cancel">
                                        <input type="hidden" name="bookingId" value="@booking.Id"/>
                                        <button type="submit" class="inline-flex items-center gap-1 px-3 py-1.5 bg-red-50 hover:bg-red-100 text-red-600 rounded-lg text-sm font-medium transition-colors border border-red-200">
                                            ✗ Скасувати
                                        </button>
                                    </form>
                                }
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Monthly bookings chart
        const monthlyCtx = document.getElementById('monthlyChart').getContext('2d');
        new Chart(monthlyCtx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Statistics.MonthlyStats.Select(x => x.MonthName))),
                datasets: [{
                    label: 'Бронювань',
                    data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Statistics.MonthlyStats.Select(x => x.BookingsCount))),
                    backgroundColor: 'rgba(102, 126, 234, 0.7)',
                    borderColor: 'rgb(102, 126, 234)',
                    borderWidth: 2,
                    borderRadius: 8,
                    borderSkipped: false,
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(0,0,0,0.05)'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });

        // Hotels revenue chart
        const hotelsCtx = document.getElementById('hotelsChart').getContext('2d');
        new Chart(hotelsCtx, {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Statistics.HotelStats.Select(x => x.HotelName))),
                datasets: [{
                    data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Statistics.HotelStats.Select(x => x.Revenue))),
                    backgroundColor: [
                        'rgba(102, 126, 234, 0.8)',
                        'rgba(118, 75, 162, 0.8)',
                        'rgba(16, 185, 129, 0.8)',
                        'rgba(245, 158, 11, 0.8)',
                        'rgba(239, 68, 68, 0.8)'
                    ],
                    borderWidth: 0,
                    hoverOffset: 10
                }]
            },
            options: {
                responsive: true,
                cutout: '65%',
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            padding: 20,
                            usePointStyle: true,
                            pointStyle: 'circle'
                        }
                    }
                }
            }
        });
    </script>
}
