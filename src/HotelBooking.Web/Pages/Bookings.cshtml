@page
@model HotelBooking.Web.Pages.BookingsModel
@using HotelBooking.Domain.Enums
@{
    ViewData["Title"] = "Мої бронювання";
    
    string GetStatusColor(BookingStatus status) => status switch
    {
        BookingStatus.Pending => "bg-amber-50 text-amber-700 border-amber-200",
        BookingStatus.Confirmed => "bg-emerald-50 text-emerald-700 border-emerald-200",
        BookingStatus.CheckedIn => "bg-blue-50 text-blue-700 border-blue-200",
        BookingStatus.CheckedOut => "bg-gray-50 text-gray-600 border-gray-200",
        BookingStatus.Cancelled => "bg-red-50 text-red-700 border-red-200",
        _ => "bg-gray-50 text-gray-600 border-gray-200"
    };
    
    string GetStatusIcon(BookingStatus status) => status switch
    {
        BookingStatus.Pending => "⏳",
        BookingStatus.Confirmed => "✅",
        BookingStatus.CheckedIn => "🔑",
        BookingStatus.CheckedOut => "🚪",
        BookingStatus.Cancelled => "❌",
        _ => "📋"
    };
    
    string GetStatusText(BookingStatus status) => status switch
    {
        BookingStatus.Pending => "Очікує",
        BookingStatus.Confirmed => "Підтверджено",
        BookingStatus.CheckedIn => "Заселено",
        BookingStatus.CheckedOut => "Виселено",
        BookingStatus.Cancelled => "Скасовано",
        _ => status.ToString()
    };
}

<div class="max-w-5xl mx-auto">
    <!-- Header -->
    <div class="flex items-center gap-4 mb-8">
        <div class="w-14 h-14 gradient-bg rounded-2xl flex items-center justify-center shadow-lg">
            <span class="text-3xl">📋</span>
        </div>
        <div>
            <h1 class="text-3xl font-bold text-gray-800">Мої бронювання</h1>
            <p class="text-gray-500">Керуйте своїми бронюваннями та відстежуйте статус</p>
        </div>
    </div>

    @if (!Model.Bookings.Any())
    {
        <div class="glass-effect rounded-2xl shadow-xl p-12 text-center border border-gray-100">
            <div class="w-24 h-24 gradient-bg rounded-full flex items-center justify-center mx-auto mb-6">
                <span class="text-5xl">🏨</span>
            </div>
            <h2 class="text-2xl font-bold text-gray-800 mb-3">У вас ще немає бронювань</h2>
            <p class="text-gray-500 mb-8 max-w-md mx-auto">Знайдіть ідеальний готель для вашого наступного відпочинку та забронюйте номер прямо зараз!</p>
            <a href="/" class="inline-flex items-center gap-2 btn-gradient text-white font-semibold py-4 px-8 rounded-xl shadow-lg text-lg">
                <span>Переглянути готелі</span>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                </svg>
            </a>
        </div>
    }
    else
    {
        <!-- Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
            <div class="glass-effect rounded-xl p-4 border border-gray-100">
                <div class="text-2xl mb-1">📊</div>
                <div class="text-2xl font-bold text-gray-800">@Model.Bookings.Count()</div>
                <div class="text-sm text-gray-500">Всього</div>
            </div>
            <div class="glass-effect rounded-xl p-4 border border-emerald-100 bg-emerald-50/30">
                <div class="text-2xl mb-1">✅</div>
                <div class="text-2xl font-bold text-emerald-600">@Model.Bookings.Count(b => b.Status == BookingStatus.Confirmed)</div>
                <div class="text-sm text-gray-500">Підтверджено</div>
            </div>
            <div class="glass-effect rounded-xl p-4 border border-amber-100 bg-amber-50/30">
                <div class="text-2xl mb-1">⏳</div>
                <div class="text-2xl font-bold text-amber-600">@Model.Bookings.Count(b => b.Status == BookingStatus.Pending)</div>
                <div class="text-sm text-gray-500">Очікує</div>
            </div>
            <div class="glass-effect rounded-xl p-4 border border-purple-100 bg-purple-50/30">
                <div class="text-2xl mb-1">💰</div>
                <div class="text-2xl font-bold gradient-text">@Model.Bookings.Sum(b => b.TotalPrice).ToString("N0") ₴</div>
                <div class="text-sm text-gray-500">Загалом</div>
            </div>
        </div>
        
        <div class="space-y-4">
            @foreach (var booking in Model.Bookings)
            {
                <div class="glass-effect rounded-2xl shadow-lg p-6 border border-gray-100 card-hover">
                    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                        <div class="flex-1">
                            <div class="flex flex-wrap items-center gap-3 mb-3">
                                <h3 class="text-xl font-bold text-gray-800">@booking.HotelName</h3>
                                <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium border @GetStatusColor(booking.Status)">
                                    <span>@GetStatusIcon(booking.Status)</span>
                                    @GetStatusText(booking.Status)
                                </span>
                            </div>
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-3 text-sm">
                                <div class="flex items-center gap-2 text-gray-600">
                                    <span class="w-8 h-8 bg-gray-100 rounded-lg flex items-center justify-center">🚪</span>
                                    <div>
                                        <div class="text-xs text-gray-400">Номер</div>
                                        <div class="font-semibold">@booking.RoomNumber</div>
                                    </div>
                                </div>
                                <div class="flex items-center gap-2 text-gray-600">
                                    <span class="w-8 h-8 bg-gray-100 rounded-lg flex items-center justify-center">📅</span>
                                    <div>
                                        <div class="text-xs text-gray-400">Дати</div>
                                        <div class="font-semibold">@booking.CheckInDate.ToString("dd.MM") — @booking.CheckOutDate.ToString("dd.MM.yyyy")</div>
                                    </div>
                                </div>
                                <div class="flex items-center gap-2 text-gray-600">
                                    <span class="w-8 h-8 bg-gray-100 rounded-lg flex items-center justify-center">👥</span>
                                    <div>
                                        <div class="text-xs text-gray-400">Гостей</div>
                                        <div class="font-semibold">@booking.NumberOfGuests</div>
                                    </div>
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(booking.SpecialRequests))
                            {
                                <div class="mt-3 p-3 bg-gray-50 rounded-xl">
                                    <span class="text-gray-400 text-xs">📝 Побажання:</span>
                                    <p class="text-gray-600 text-sm mt-1">@booking.SpecialRequests</p>
                                </div>
                            }
                        </div>
                        <div class="lg:text-right flex lg:flex-col items-center lg:items-end justify-between lg:justify-start gap-4">
                            <div>
                                <div class="text-xs text-gray-400 uppercase tracking-wider">Вартість</div>
                                <div class="text-3xl font-bold gradient-text">@booking.TotalPrice.ToString("N0") ₴</div>
                                <div class="text-xs text-gray-400">Бронювання #@booking.Id</div>
                            </div>
                            @if (booking.Status == BookingStatus.Pending || booking.Status == BookingStatus.Confirmed)
                            {
                                <form method="post" asp-page-handler="Cancel">
                                    <input type="hidden" name="bookingId" value="@booking.Id" />
                                    <button type="submit" 
                                            onclick="return confirm('Ви впевнені, що хочете скасувати бронювання?')"
                                            class="inline-flex items-center gap-2 px-4 py-2 bg-red-50 hover:bg-red-100 text-red-600 rounded-xl text-sm font-medium transition-colors border border-red-100">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                        </svg>
                                        Скасувати
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
