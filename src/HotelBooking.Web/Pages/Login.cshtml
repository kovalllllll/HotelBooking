@page
@model HotelBooking.Web.Pages.LoginModel
@{
    ViewData["Title"] = "Вхід";
}

<div class="min-h-[70vh] flex items-center justify-center px-4">
    <div class="w-full max-w-md">
        <!-- Logo -->
        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center w-16 h-16 gradient-bg rounded-2xl shadow-lg mb-4">
                <span class="text-3xl">👤</span>
            </div>
            <h1 class="text-3xl font-bold text-gray-800">Вхід в систему</h1>
            <p class="text-gray-500 mt-2">Раді бачити вас знову!</p>
        </div>
        
        <div class="glass-effect rounded-2xl shadow-xl p-8 border border-gray-100">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="bg-red-50 border border-red-200 p-4 mb-6 rounded-xl flex items-start gap-3">
                    <span class="text-red-500 text-xl">⚠️</span>
                    <p class="text-red-700 text-sm">@Model.ErrorMessage</p>
                </div>
            }

            <form method="post" class="space-y-5">
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Email адреса</label>
                    <div class="relative">
                        <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">✉️</span>
                        <input type="email" asp-for="Input.Email" required
                               class="w-full pl-12 pr-4 py-3.5 border border-gray-200 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent input-modern bg-gray-50/50"
                               placeholder="your@email.com">
                    </div>
                    <span asp-validation-for="Input.Email" class="text-red-500 text-sm mt-1 block"></span>
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Пароль</label>
                    <div class="relative">
                        <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">🔒</span>
                        <input type="password" asp-for="Input.Password" required
                               class="w-full pl-12 pr-4 py-3.5 border border-gray-200 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent input-modern bg-gray-50/50"
                               placeholder="••••••••">
                    </div>
                    <span asp-validation-for="Input.Password" class="text-red-500 text-sm mt-1 block"></span>
                </div>
                <div class="flex items-center justify-between">
                    <label class="flex items-center cursor-pointer">
                        <input type="checkbox" asp-for="Input.RememberMe" class="w-5 h-5 text-purple-600 rounded border-gray-300 focus:ring-purple-500">
                        <span class="ml-2 text-sm text-gray-600">Запам'ятати мене</span>
                    </label>
                </div>
                <button type="submit" class="w-full btn-gradient text-white font-semibold py-4 px-4 rounded-xl shadow-lg flex items-center justify-center gap-2 text-lg">
                    <span>Увійти</span>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                    </svg>
                </button>
            </form>

            <div class="mt-8 text-center">
                <p class="text-gray-600">
                    Немає акаунту? 
                    <a href="/Register" class="text-purple-600 hover:text-purple-700 font-semibold hover:underline transition-colors">Зареєструватися</a>
                </p>
            </div>
        </div>

        <div class="mt-6 glass-effect p-5 rounded-2xl border border-gray-100">
            <div class="flex items-center gap-3 mb-3">
                <span class="text-xl">💡</span>
                <span class="text-sm font-semibold text-gray-700">Тестовий акаунт адміністратора</span>
            </div>
            <div class="bg-gray-50 rounded-xl p-3 font-mono text-sm text-gray-600 text-center">
                admin@hotel.com / Admin123!
            </div>
        </div>
    </div>
</div>
